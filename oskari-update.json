{
  "variables": {
    "base_image": "okffi/oskari",
    "oskari_image": "okffi/oskari"
  },
  "builders": [
    {
        "type": "docker",
        "image": "{{user `base_image`}}",
        "commit": true,
        "pull": false
    }
  ],
  "provisioners": [
        {
          "type": "file",
          "source": "run.sh",
          "destination": "/oskari"
        },
        {
            "type": "shell",
            "inline": [
                "cd /oskari",
                "sudo chmod 755 run.sh",
                "cd /oskari/oskari-server",
                "sudo git pull",
                "sudo mvn clean install"
            ]
        }
  ],
  "post-processors": [
        [
            {
                "type": "docker-tag",
                "repository": "{{user `oskari_image`}}",
                "tag": "latest"
            }
        ]
    ]
}